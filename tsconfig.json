{
    "compilerOptions": {
      "outDir": "./lib",
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictBindCallApply": true,
      "strictPropertyInitialization": true,
      "strictFunctionTypes": true,
      "removeComments": true,
      "declaration": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "jsx": "react",
      "typeRoots": [
        "index.d.ts",
        "node_modules/@types"
      ]
    },
    "include": [
      "./src/**/*.tsx",
    ],
    "exclude": [
      "node_modules"
    ]
  }
